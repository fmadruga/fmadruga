{
  "compilerOptions": {
    "target": "ES6", 
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
  },
  "include": [
    "src/**/*.ts",
    "src/config/config.js",
  ],
  "exclude": [
    "node_modules"
  ]
}
